                                    <TextBlock FontSize="14" HorizontalAlignment="Left" TextAlignment="Center" Height="100" Margin="-20 -50 0 0">
                                    Легенда: <LineBreak/>
                                    <Bold Style="{StaticResource Strong}">Зеленый</Bold> - сильная связь<LineBreak/>
                                    <Bold Style="{StaticResource Middle}">Желтый</Bold> - средняя связь<LineBreak/>
                                    <Bold Style="{StaticResource Weak}">Оранжевый</Bold> - слабая связь<LineBreak/>
                                    <Bold Style="{StaticResource Reverse}">Красный</Bold> - обратная связь
                                    </TextBlock>
                                    <TextBlock FontSize="14" VerticalAlignment="Top" Height="20" Margin="40 0 0 0">Диаграмма парной корреляции</TextBlock>
                                    <Canvas Margin="-400 40 0 0" x:Name="Canv" Height="300" HorizontalAlignment="Center"/>
                                </WrapPanel>
                                <StackPanel  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                    <TextBlock FontSize="14" HorizontalAlignment="Center">Диаграмма частной корреляции</TextBlock>
                                    <Canvas Margin="-225 20 0 0" x:Name="Canv1" Height="300" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel  Grid.Row="3" Grid.Column="0" Margin="-180 -80 0 0" HorizontalAlignment="Center">
                                    <TextBlock FontSize="14" HorizontalAlignment="Center">Диаграмма парной корреляции(только сильные связи)</TextBlock>
                                    <Canvas Margin="-175 20 0 0" x:Name="Canv2" Height="300" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel  Grid.Row="3" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 -80 0 0">
                                    <TextBlock FontSize="14" HorizontalAlignment="Center">Диаграмма частной корреляции(только сильные связи)</TextBlock>
                                    <Canvas Margin="-225 20 0 0" x:Name="Canv3" Height="300" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="RegressionTab" IsEnabled="False">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="10" Width="10" Fill="Black" />
                        <TextBlock Margin="3" FontSize="14">Регрессионный анализ</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <StackPanel>
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="Бетта" VerticalAlignment="Center" Margin="2" HorizontalAlignment="Center"/>
                                <DataGrid  x:Name="d1" IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Название" Binding="{Binding _model}"/>
                                        <DataGridTextColumn Header="Цена" Binding="{Binding _price}"/>
                                        <DataGridTextColumn Header="Частота процессора" Binding="{Binding _CPUClock}"/>
                                        <DataGridTextColumn Header="Оперативная память" Binding="{Binding _RAM}"/>
                                        <DataGridTextColumn Header="Жесткий диск/накопитель" Binding="{Binding _DriveDisk}"/>
                                        <DataGridTextColumn Header="Частота графического процессора" Binding="{Binding _GPUClock}"/>
                                        <DataGridTextColumn Header="Диагональ экрана" Binding="{Binding _Diagonal}"/>
                                        <DataGridTextColumn Header="Аккумулятор" Binding="{Binding _Battery}"/>
                                        <DataGridTextColumn Header="Вес" Binding="{Binding _Weight}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="Y" VerticalAlignment="Center" Margin="2" HorizontalAlignment="Center"/>
                                <DataGrid  x:Name="d2" IsReadOnly="True" ItemsSource="{Binding Path=YTable}" CanUserAddRows="False"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Исходное уравнение регрессии" HorizontalAlignment="Center"  Margin="2"/>
                                <TextBlock x:Name="d3"/>
                            </StackPanel>
                            <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Margin="10">
                                    <TextBlock Text="Прогнозирование" HorizontalAlignment="Center"/>
                                    <DataGrid x:Name="d4"
                                            IsReadOnly="True"
                                             CanUserAddRows="False" AutoGenerateColumns="False" >
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Частота процессора" Binding="{Binding _CPUClock}"/>
                                            <DataGridTextColumn Header="Оперативная память" Binding="{Binding _RAM}"/>
                                            <DataGridTextColumn Header="Жесткий диск/накопитель" Binding="{Binding _DriveDisk}"/>
                                            <DataGridTextColumn Header="Частота графического процессора" Binding="{Binding _GPUClock}"/>
                                            <DataGridTextColumn Header="Диагональ экрана" Binding="{Binding _Diagonal}"/>
                                            <DataGridTextColumn Header="Аккумулятор" Binding="{Binding _Battery}"/>
                                            <DataGridTextColumn Header="Вес" Binding="{Binding _Weight}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Margin="10">
                                    <TextBlock Text="Результат прогноза" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="d5"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
